{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "outDir": "build",
    "rootDir": "src",
    "composite": true,
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "node",
      "jest"
      // "testing-library__jest-dom"
    ],
    // "allowImportingTsExtensions": true,
    // "noEmit": true,
    // "jsx": "react-jsx",
    "jsx": "react"
  },
  "include": [
    "src",
    "src/locales/*.json", 
    "jest.config.js",
    "src/**/*.ts",
    "src/lib/**/*.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}