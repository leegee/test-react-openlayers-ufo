{
    "include": [
        "src",
        "node_modules/@types"
    ],
    "compilerOptions": {
        "typeRoots": [
            "node_modules/@types",
            "types"
        ],
        "types": [
            "node",
            "jest"
        ],
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "incremental": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "useDefineForClassFields": true,
        "lib": [
            "ES2020"
        ],
        "outDir": "./build",
        "baseUrl": "./src",
        "paths": {
            "@ufo-monorepo/common-types/*": [
                "packages/common-types/*"
            ],
            "@ufo-monorepo/config/*": [
                "packages/config/*"
            ],
            "@ufo-monorepo/logger/*": [
                "packages/logger/*"
            ],
            "@ufo-monorepo/dbh/*": [
                "packages/dbh/*"
            ],
            "@ufo-monorepo/api-functions/*": [
                "packages/api-functions/*"
            ]
        }
    },
    "references": [
        {
            "path": "./packages/common-types"
        },
        {
            "path": "./packages/config"
        },
        {
            "path": "./packages/logger"
        },
        {
            "path": "./packages/dbh"
        },
        {
            "path": "./packages/api-functions"
        },
        {
            "path": "./packages/server"
        },
        {
            "path": "./packages/client"
        }
    ]
}