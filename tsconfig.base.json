{
    "include": [
        "src",
        "node_modules/@types"
    ],
    "compilerOptions": {
        "typeRoots": [
            "node_modules/@types",
            "types"
        ],
        "types": [
            "node",
            "jest"
        ],
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "incremental": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "useDefineForClassFields": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,     
        "lib": [
            "ES2020"
        ],
        "outDir": "build",
        "baseUrl": "src",
        "paths": {
            "@ufo-monorepo/*": [
                "packages/*/src"
            ]
        }
    },
    "references": [
        {
            "path": "./packages/common-types"
        },
        {
            "path": "./packages/config"
        },
        {
            "path": "./packages/logger"
        },
        {
            "path": "./packages/dbh"
        },
        {
            "path": "./packages/api-functions"
        },
        {
            "path": "./packages/server"
        },
        {
            "path": "./packages/client"
        }
    ]
}