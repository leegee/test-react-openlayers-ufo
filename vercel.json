{
  "version": 2,

  "installCommand": "npm install",
  "buildCommand": "npx turbo run build",
  "outputDirectory": "packages/client/build",

  "functions": {
    "packages/vercel/build/api/*.js": {
      "runtime": "node@20.x"
    }
  },

  "rewrites": [
    {
      "source": "/api/search",
      "destination": "/packages/vercel/build/api/search.js"
    },
    {
      "source": "/api/hello",
      "destination": "/packages/vercel/build/api/hello.js"
    },
    {
      "source": "/api/:path*",
      "destination": "/packages/vercel/build/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/packages/client/build/$1"
    }
  ]
}
