{
  "version": 2,

  "installCommand": "npm install",
  "buildCommand": "npx turbo run build",
  "outputDirectory": "packages/client/build",

  "functions": {
    "api/*.ts": {
      "includeFiles": "**/*"
    }
  },

  "rewrites": [
    {
      "source": "/api/search",
      "destination": "/api/search.ts"
    },
    {
      "source": "/api/hello",
      "destination": "/api/hello.ts"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/packages/client/build/$1"
    }
  ]
}
