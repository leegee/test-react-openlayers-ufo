{
  "version": 2,

  "build": {
    "env": {
      "NODE_ENV": "production",
      "VITE_API_PORT": "3000",
      "VITE_ENDPOINT_SEARCH": "/api/search",
      "VITE_ENDPOINT_DETAILS": "/api/details",
      "DATABASE_URL": "postgres://postgress:password@localhost:5432/ufo"
    }
  },

  "builds": [
    {
      "src": "packages/client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "packages/vercel/package.json",
      "use": "@vercel/node"
    }
  ],

  "routes": [
    {
      "src": "/api/search",
      "dest": "packages/vercel/build/search.js"
    },
    {
      "src": "/api/details",
      "dest": "packages/vercel/build/details.js"
    },
    {
      "src": "/api/hello",
      "dest": "packages/vercel/build/hello.js"
    },
    {
      "src": "/(.*)",
      "dest": "packages/client/dist/$1"
    }
  ]
}
