{
  "version": 2,

  "installCommand": "npm install",
  "buildCommand": "npx turbo run build",
  "outputDirectory": "packages/client/build",

  "functions": {
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },

  "routes": [
    {
      "src": "/api/search",
      "dest": "api/src/search.js"
    },

    {
      "src": "/api/hello",
      "dest": "api/src/hello.js"
    },

    {
      "src": "/(.*)",
      "dest": "packages/client/build/$1"
    }
  ]
}
